# RunGame Admin - 生产环境变量模板
# 复制此文件为 .env 并填入实际值

# ============================================
# Node.js 环境
# ============================================
NODE_ENV=production
PORT=4000
HOSTNAME=0.0.0.0

# ============================================
# 数据库连接
# ============================================
# 业务数据库（Supabase）
DATABASE_URL="postgresql://user:password@host:port/db?sslmode=require"

# 管理数据库（Neon - 用于认证、AI配置等）
CACHE_DATABASE_URL="postgresql://user:password@host:port/db?sslmode=require"

# ============================================
# Better Auth 认证配置
# ============================================
# 生成方法: openssl rand -base64 32
BETTER_AUTH_SECRET="your-better-auth-secret-here"

# 生产环境 URL（必须与 NEXT_PUBLIC_APP_URL 一致）
BETTER_AUTH_URL="https://gl.swhh.online"

# 公开的 URL（前端使用）
NEXT_PUBLIC_APP_URL="https://gl.swhh.online"

# 信任主机（允许跨域）
AUTH_TRUST_HOST=true

# ============================================
# 加密密钥
# ============================================
# 生成方法: openssl rand -base64 48
ENCRYPTION_KEY="your-encryption-key-here"

# ============================================
# 其他配置
# ============================================
NEXT_TELEMETRY_DISABLED=1
