{
  "name": "@rungame/database",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Shared database layer for RunGame Website (业务数据库层)",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./generated": "./generated/client/index.ts"
  },
  "scripts": {
    "build": "echo 'Using JIT mode - no build needed'",
    "dev": "echo 'Database package is in JIT mode'",
    "clean": "rm -rf dist",
    "generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:generate": "pnpm run generate",
    "generate:business": "prisma generate --schema=./prisma/schema.prisma",
    "db:push": "export $(grep -v '^#' .env | xargs) && prisma db push --schema=./prisma/schema.prisma",
    "db:studio": "export $(grep -v '^#' .env | xargs) && prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "export $(grep -v '^#' .env | xargs) && npx tsx prisma/seed.ts"
  },
  "prisma": {
    "seed": "export $(grep -v '^#' .env | xargs) && npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "@prisma/client-runtime-utils": "7.2.0",
    "pg": "^8.16.3",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@rungame/typescript-config": "workspace:*",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "prisma": "7.2.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "turbo": {
    "build": {
      "outputs": []
    }
  }
}