{
  "name": "@rungame/database",
  "version": "0.1.0",
  "private": true,
  "description": "Shared database layer for RunGame Admin and Website",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc || exit 0",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "generate": "npm run generate:business && npm run generate:admin",
    "generate:business": "prisma generate --schema=./prisma/schema.prisma",
    "generate:admin": "prisma generate --schema=./prisma/schema-admin.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:push:admin": "prisma db push --schema=./prisma/schema-admin.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:studio:admin": "prisma studio --schema=./prisma/schema-admin.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "prisma": "^6.17.1",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  }
}
