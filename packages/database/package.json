{
  "name": "@rungame/database",
  "version": "0.1.0",
  "private": true,
  "description": "Shared database layer for RunGame Website (业务数据库层)",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "echo 'Using JIT mode - no build needed'",
    "dev": "echo 'Database package is in JIT mode'",
    "clean": "rm -rf dist",
    "generate": "prisma generate --schema=./prisma/schema.prisma",
    "generate:business": "prisma generate --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "prisma": "^6.17.1",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "turbo": {
    "build": {
      "outputs": []
    }
  }
}
