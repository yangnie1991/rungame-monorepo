# ============================================================
# Admin 应用环境变量示例
# ============================================================

# 数据库配置
# 业务数据库（与 Website 共享）
DATABASE_URL="postgresql://user:password@host:port/db_name?schema=public"
# Admin 专用缓存/日志数据库
CACHE_DATABASE_URL="postgresql://user:password@host:port/db_name_admin?schema=public"

# Auth 配置 (Better Auth)
# 生成: openssl rand -base64 32
BETTER_AUTH_SECRET="your_secret_key_base64"
# 认证基础 URL (通常与 NEXT_PUBLIC_APP_URL 相同)
BETTER_AUTH_URL="http://localhost:4000"
# 客户端应用 URL
NEXT_PUBLIC_APP_URL="http://localhost:4000"
# 信任 Host (反向代理部署时需要)
AUTH_TRUST_HOST=true

# 加密密钥
# 生成: openssl rand -base64 48
ENCRYPTION_KEY="your_encryption_key_base64_must_be_very_long"

# Cloudflare R2 存储配置
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_PUBLIC_URL=""

# 运行环境
NODE_ENV="development"
PORT=4000
HOSTNAME="0.0.0.0"

# Google 搜索 API (用于 SEO 工具)
GOOGLE_SEARCH_API_KEY=""
GOOGLE_SEARCH_ENGINE_ID=""

# Jina Reader API (用于内容通过 AI 处理)
JINA_API_KEY=""
