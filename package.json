{
  "name": "rungame-online",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@rungame/website --filter=@rungame/admin",
    "dev:admin": "turbo run dev --filter=@rungame/admin",
    "dev:website": "turbo run dev --filter=@rungame/website",
    "build": "turbo run build",
    "build:database": "turbo run build --filter=@rungame/database",
    "build:admin": "turbo run build --filter=@rungame/admin",
    "build:website": "turbo run build --filter=@rungame/website",
    "start": "pnpm --filter @rungame/website start",
    "start:admin": "pnpm --filter @rungame/admin start",
    "start:website": "pnpm --filter @rungame/website start",
    "lint": "turbo run lint",
    "db:push": "pnpm --filter @rungame/database db:push",
    "db:seed": "pnpm --filter @rungame/database db:seed",
    "db:generate": "pnpm --filter @rungame/database generate",
    "db:studio": "pnpm --filter @rungame/database db:studio"
  },
